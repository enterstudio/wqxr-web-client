<span class="streaminfoline">
  <span class="streaminfoline-stationinfo">
    LIVE NOW on <a href='{{stream.scheduleUrl}}'
     target={{is-external stream.scheduleUrl}}
     data-tracking-category='Persistent Player'
     data-tracking-action='Click Through to Schedule'
     data-tracking-label='{{stream.name}}'>{{stream.name}}</a>
  </span>
  <span class="streaminfoline-stationlinks">
    <a href='{{stream.scheduleUrl}}'
       title='Schedule'
       target={{is-external stream.scheduleUrl}}
       data-tracking-category='Persistent Player'
       data-tracking-action='Click Through to Schedule'
       data-tracking-label='{{stream.name}}'>SCHEDULE</a>
    {{#if stream.playlistUrl}}
    <a href='/streams/{{stream.id}}'
       title='Music Playlist'
       data-tracking-category='Persistent Player'
       data-tracking-action='Click Through to Music Playlist'
       data-tracking-label='{{stream.name}}'>MUSIC PLAYLIST</a>
    {{/if}}
    {{#link-to 'stream' (query-params modal='null') title='All Live Streams'}}ALL LIVE STREAMS{{/link-to}}
  </span>
</span>
