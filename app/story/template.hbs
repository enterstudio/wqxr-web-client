{{#django-page page=model.page}}

  {{#if model.story.commentsEnabled}}
    {{#ember-wormhole to="comments"}}
      {{story-comments story=model.story
                       user=model.user
                       getComments=model.getComments
                       browserId=model.browserId}}
    {{/ember-wormhole}}
  {{/if}}

  {{#ember-wormhole to="related"}}
    {{#unless isMobile}}
      {{#if (or (in-experimental-group 1) (in-experimental-group 2))}}
        {{#simple-callout button-text="Try WNYC's Discover" button-url='/discover' class='discover-callout'}}
          Like this story? Find more stories to listen to based on shows and topics youâ€™re interested in.
        {{/simple-callout}}
      {{/if}}
    {{/unless}}

    {{related-stories getStories=model.getRelatedStories}}
  {{/ember-wormhole}}

{{/django-page}}
