{{#sticky-page-header}}
  {{discover-setup-header
    stepLabel="Step 1 of 2"
    errorText = (if (and showError hasNotSelectedATopic) 'Please select at least one topic')
    title="Pick Your Topics"
    nextButtonEnabled=(not hasNotSelectedATopic)
    nextButtonText="Next"
    nextButtonIcon="right-caret"
    onNext=(route-action 'next' currentTopicSelection)
    onBack=(route-action 'back' currentTopicSelection)
    loadingDirection=loadingDirection
  }}
{{/sticky-page-header}}

{{discover-topic-list
  topics=model.topics
  selectedTopicTags=model.selectedTopicTags
  onNoneSelected=(action (mut hasNotSelectedATopic))
  onTopicsUpdated=(action (mut currentTopicSelection))}}

{{outlet}}
