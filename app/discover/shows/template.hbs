{{title "Discover Select Shows"}}

{{#sticky-page-header}}
  {{discover-setup-header
    stepLabel="Step 2 of 2"
    title="Pick Your Shows"
    errorText = (if (and showError hasNotSelectedAShow) 'Please select at least one show')
    nextButtonEnabled=(not hasNotSelectedAShow)
    nextButtonText="Create Playlist"
    onNext=(route-action 'next' currentShowExclusion hasNotSelectedAShow)
    onBack=(route-action 'back' currentShowExclusion)
  }}
{{/sticky-page-header}}

{{discover-show-list
  shows=model.shows
  excludedShowSlugs=model.excludedShowSlugs
  onShowsUpdated=(action (mut currentShowExclusion))
  onNoneSelected=(action (mut hasNotSelectedAShow))
}}
