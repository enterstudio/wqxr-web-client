{{#sticky-page-header}}
  {{discover-setup-header
    stepLabel="Step 2 of 2"
    title="Pick Your Shows"
    errorText = (if (and showError hasNotSelectedAShow) 'Please select at least one show')
    nextButtonEnabled=(not hasNotSelectedAShow)
    nextButtonText="Create Station"
    onNext=(route-action 'next' currentShowSelection)
    onBack=(route-action 'back' currentShowSelection)
  }}
{{/sticky-page-header}}

{{discover-show-list
  shows=model.shows
  selectedShowSlugs=model.selectedShowSlugs
  onShowsUpdated=(action (mut currentShowSelection))
  onNoneSelected=(action (mut hasNotSelectedAShow))
}}
